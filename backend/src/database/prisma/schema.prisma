model User {
  id String @id @default(uuid())
  email String @unique
  userName String @unique
  password String?
  realName String?
  address String?
  phoneNumber String?
  avatar String?
  token Token?
}

model Token {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId String 
  refreshToken String? 
}



